# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf diff=python
*.pyx text eol=lf diff=python
*.pxd text eol=lf diff=python
*.pxi text eol=lf diff=python
*.c text eol=lf diff=cpp
*.cpp text eol=lf diff=cpp
*.h text eol=lf diff=cpp
*.hpp text eol=lf diff=cpp

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
Makefile text eol=lf

# Documentation
*.md text eol=lf diff=markdown
*.txt text eol=lf
*.rst text eol=lf
LICENSE text eol=lf
NOTICE text eol=lf
COPYRIGHT.md text eol=lf
CODEOWNERS text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.cff text eol=lf

# Git config
.gitignore text eol=lf
.gitattributes text eol=lf
.gitmodules text eol=lf

# CI/CD
*.dockerfile text eol=lf
Dockerfile* text eol=lf
.dockerignore text eol=lf

# Binary files
*.so binary
*.pyc binary
*.pyo binary
*.pyd binary
*.dll binary
*.exe binary
*.dylib binary
*.a binary
*.o binary
*.obj binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary
*.7z binary
*.rar binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Data files
*.db binary
*.sqlite binary
*.model binary
*.pkl binary
*.npy binary
*.npz binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests export-ignore
docs/dev export-ignore
*.test.py export-ignore
benchmark.py export-ignore

# Language statistics (mark generated code as generated)
src/**/*.c linguist-generated=true
src/**/*.cpp linguist-generated=true
src/**/*.html linguist-generated=true

# Mark Cython source as primary language
*.pyx linguist-language=Cython

# Diff settings for better code review
*.pyx diff=python
*.py diff=python
*.md diff=markdown

# Merge strategies
*.json merge=union
CHANGELOG.md merge=union

